<!DOCTYPE html>
<html>

    <%- include('partials/head') %>

    <body>

        <header>
        	<div class="headerwrapper">
        		<%- include('partials/header-left') %>
        		<%- include('partials/header-right') %>
        	</div>
        </header>

		<section>
			<div class="mainwrapper">
				<%- include('partials/left-panel') %>
				<div class="mainpanel">
					<%- include('partials/page-header') %>
					 <div class="contentpanel">
					 	<div class="row row-stat">
                        	<h3>DTW</h3>
                        	<div id="dtw"></div>
                    	</div>
 					</div>
				</div>
			</div>
		</section>
		        
		<%- include('partials/scripts-js') %>

		<script>
			// Init url
            var url = 'http://localhost:8080';
            var socket = io.connect(url);

			var colors = ['#7cb5ec', '#f45b5b', '#90ed7d', '#f7a35c', '#8085e9', '#f15c80', '#e4d354', '#2b908f', '#f45b5b', '#91e8e1'];

            /* DTW */
            socket.emit('get_dtw');

            socket.on('return_info_dtw', function (dtwData) {
                console.log(dtwData);

				var listVariances = [];
				dtwData.forEach(function(route, i){
					var variances = {
						name: 'Route ' + (i+1),
						data: route,
						color: colors[i],
						lineWidth:0
					};
					listVariances.push(variances);
				});

				Highcharts.chart('dtw', {
					chart: {
						height:640
					},
					plotOptions: {
						line:{
							lineWidth: 1,
							marker:{
								enabled:true
							}
						}
					},
					title: {
						text: 'Variance per day',
						x: -20 //center
					},
					subtitle: {
						text: 'for each route',
						x: -20
					},
					xAxis: {
						title: {
							text: 'Days of the year (j)'
						}
					},
					yAxis: {
						title: {
							text: 'Variance'
						},
						plotLines: [{
							value: 0,
							width: 1,
							color: '#808080'
						}]
					},
					tooltip: {
						valueSuffix: 'h'
					},
					legend: {
						layout: 'vertical',
						align: 'right',
						verticalAlign: 'middle',
						borderWidth: 0
					},
					series: listVariances
				});

            });
		</script>
	</body>
</html>